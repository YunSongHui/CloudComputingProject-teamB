mysql -u cloud -p

create database Crawler
// 크롤링한 데이터를 저장할 테이터베이스를 생성

use Crawler
create table Recruitment_Info ( 
	company varchar(25) not null, 
	title varchar(50) not null, 
	titlelink varchar(100),
	sitename varchar(20),
	field1 varchar(50),
	field2 varchar(20),
	field3 varchar(20),
	career varchar(20),
	academic varchar(10),
	area varchar(50),
	workingcondition varchar(10),
	deadline varchar(15),
	star float(3),
	income int(6),
	publicTransport TIME,
	car TIME,
	walk TIME,
	primary key(company, title)
);
// 크롤링한 데이터를 저장할 테이블 생성
